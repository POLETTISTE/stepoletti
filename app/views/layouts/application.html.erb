<!doctype html>
<html lang="fr">
  <head>
    <title>Stéphane POLETTI || Développeur Web</title>
    <link rel = "icon" href = "https://res.cloudinary.com/polettiste/image/upload/v1641301378/stephanepoletti/logo_poletti_web_nlbifd.png" type = "image/png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">



    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Hotjar Tracking Code for www.stephanepoletti.com -->
